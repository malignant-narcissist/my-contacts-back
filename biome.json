{
  "$schema": "https://biomejs.dev/schemas/1.1.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "recommended": true
      },
      "complexity": {
        "recommended": true,
        "useLiteralKeys": "warn"
      },
      "correctness": {
        "recommended": true
      },
      "performance": {
        "recommended": true
      },
      "nursery": {
        "noGlobalIsNan": "warn",
        "useLiteralEnumMembers": "error",
        "useExhaustiveDependencies": "warn",
        "useGroupedTypeImport": "warn",
        "noConstantCondition": "warn",
        "noConfusingArrow": "warn",
        "noSelfAssign": "warn"
      },
      "style": {
        "recommended": true,
        "noImplicitBoolean": "warn",
        "useBlockStatements": "warn",
        "useExponentiationOperator": "warn"
      },
      "suspicious": {
        "recommended": true,
        "noConsoleLog": "warn"
      },
      "security": {
        "recommended": true
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 80,
    "ignore": ["./node_modules/**/*.*"]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  }
}
